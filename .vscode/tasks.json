{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Library",
            "windows": {
                // "command": "${workspaceFolder}/lib/build.bat",
				"command": "${workspaceFolder}/lib/build.ps1",
            },
            "linux": {
                "command": "${workspaceFolder}/lib/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/lib"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger.",
        },
        {
            "type": "shell",
            "label": "Build Test",
            "windows": {
                // "command": "${workspaceFolder}/test/build.bat",
				"command": "${workspaceFolder}/test/build.ps1",
            },
            "linux": {
                "command": "${workspaceFolder}/test/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                // "command": "${workspaceFolder}/build-all.bat",
				"command": "${workspaceFolder}/build-all.ps1",
            },
            "linux": {
                "command": "${workspaceFolder}/build-all.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}